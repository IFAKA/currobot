# JobBot configuration — copy to .env and fill in
# Credentials go to macOS Keychain via `keyring`, NOT here.

# Server
HOST=127.0.0.1
PORT=8000
DEBUG=false

# Ollama (keep localhost for privacy — CV data stays local)
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=120
# Leave empty for auto-selection based on available RAM
OLLAMA_MODEL=

# Scraping delays (seconds)
SCRAPER_DEFAULT_DELAY_MIN=3.0
SCRAPER_DEFAULT_DELAY_MAX=8.0

# Data retention (days)
JOBS_RETENTION_DAYS=90
APPLICATIONS_RETENTION_DAYS=365
LOGS_RETENTION_DAYS=30
BACKUPS_ROLLING_DAYS=7
